import tkinter as tk
from tkinter import PhotoImage, Toplevel, ttk

window = tk.Tk()
window.title("Earth Remote Sensing")

#window geometry and formatting
window_width = 600
window_height = 400 
screen_width = window.winfo_screenwidth()
screen_height = window.winfo_screenheight()
center_x = int(screen_width/2 - window_width / 2)
center_y = int(screen_height/2 - window_height / 2)
window.geometry(f'{window_width}x{window_height}+{center_x}+{center_y}')
#image = PhotoImage(file = "C:\Users\tanis\OneDrive\Desktop\Fall 22\VIP_ERS\VIP_ERS\earth.jpg")

greeting = tk.Label(text="Welcome to ERS")
greeting.pack()


#button stuff
def button_click():
    print("Button Clicked")
def create():
    win = Toplevel(window)
    win.title("Location explorer")
    window_width = 600
    window_height = 400 
    screen_width = win.winfo_screenwidth()
    screen_height = win.winfo_screenheight()
    center_x = int(screen_width/2 - window_width / 2)
    center_y = int(screen_height/2 - window_height / 2)
    win.geometry(f'{window_width}x{window_height}+{center_x}+{center_y}')
    tk.Label(win, text="Latitude").grid(row=0)
    tk.Label(win, text="Longitude").grid(row=1)

    lat = tk.Entry(win)
    long = tk.Entry(win)

    lat.grid(row=0, column=1)
    long.grid(row=1, column=1)

    def show_entry_fields():
        print("Latitude: %s\nLongitude: %s" % (lat.get(), long.get()))
    
    tk.Button(win, text='Enter', command=show_entry_fields).grid(row=3, column=1, sticky=tk.W, pady=4)







#try putting mock database here
#def mock_db(args):
    #do something
    #go to db

database = ttk.Button(window, text = "Satellite Database", command = button_click)
database.pack()
location = ttk.Button(window, text = "Enter Location", command = create)
location.pack()


window.mainloop()
